<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="16dp"
    tools:ignore="RtlSymmetry">


    <TextView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:drawablePadding="24dp"
        android:paddingTop="14dp"
        android:paddingBottom="16dp"

        android:text="@string/settings"
        android:textColor="@color/YP_Black"
        android:textSize="@dimen/text_size_default"
        app:drawableStartCompat = "@drawable/ic_back_arrow_24"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingRight="6dp"
        android:paddingBottom="11dp"
        tools:ignore="RtlHardcoded">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:text="@string/dark_theme"
            android:textColor="@color/YP_Black"
            android:textSize="@dimen/text_size_settings" />

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:layout_gravity="end|center_vertical" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/padding_vertical_settings"
        android:paddingRight="@dimen/padding_right_settings"
        tools:ignore="RtlHardcoded">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:text="@string/share"
            android:textColor="@color/YP_Black"
            android:textSize="@dimen/text_size_settings" />

        <ImageView
            android:layout_width="@dimen/ic_size_default"
            android:layout_height="@dimen/ic_size_default"
            android:layout_gravity="end|center_vertical"
            android:contentDescription="@string/icon_share"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_share_24" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/padding_vertical_settings"
        android:paddingRight="@dimen/padding_right_settings"
        tools:ignore="RtlHardcoded">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:text="@string/support"
            android:textColor="@color/YP_Black"
            android:textSize="@dimen/text_size_settings" />

        <ImageView
            android:layout_width="@dimen/ic_size_default"
            android:layout_height="@dimen/ic_size_default"
            android:layout_gravity="end|center_vertical"
            android:contentDescription="@string/icon_support"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_support_24" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/padding_vertical_settings"
        android:paddingRight="@dimen/padding_right_settings"
        tools:ignore="RtlHardcoded">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:text="@string/agreement"
            android:textColor="@color/YP_Black"
            android:textSize="@dimen/text_size_settings" />

        <ImageView
            android:layout_width="@dimen/ic_size_default"
            android:layout_height="@dimen/ic_size_default"
            android:layout_gravity="end|center_vertical"
            android:contentDescription="@string/arrow_forward"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_forward_arrow_24" />

    </FrameLayout>

</LinearLayout>