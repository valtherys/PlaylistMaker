<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/album_cover"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/album_cover"
        android:scaleType="fitCenter"
        tools:src="@drawable/ic_placeholder_45" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/track_name"
            style="@style/TextViewSongTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/YSRegular16"
            tools:text="Yesterday (Remastered 2009)" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/track_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/YSRegular11"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="The Beatles The Beatles The Beatles The Beatles The Beatles The Beatles " />

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:contentDescription="@string/circle_separator"
                android:scaleType="fitXY"
                android:src="@drawable/ic_circle_gray_13" />

            <TextView
                android:id="@+id/track_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/YSRegular11"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="3:45" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/ic_size_default"
        android:layout_height="@dimen/ic_size_default"
        android:layout_gravity="center_vertical|end"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/arrow_forward"
        android:src="@drawable/ic_forward_arrow_24" />
</LinearLayout>